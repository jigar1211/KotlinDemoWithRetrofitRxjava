<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="product.warehouse.com.warehouse">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.warehouse.warehousegroup.view.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.warehouse.warehousegroup.view.ProductSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warehouse.warehousegroup.view.BarcodeScan"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warehouse.warehousegroup.view.ProductDetail"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>